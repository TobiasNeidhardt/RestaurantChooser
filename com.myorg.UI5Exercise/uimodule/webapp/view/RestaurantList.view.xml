<mvc:View controllerName="com.myorg.UI5Exercise.controller.List" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
    <List headerText="{i18n>restaurantListTitle}" class="saUiResponsiveMargin" width="auto" items="{restaurant>/Restaurants}">
        <items>
            <StandardListItem
                id="itemId"
                title="{restaurant>Name}"
                description="{restaurant>Description}"
                info="{
						path: 'restaurant>OpeningTime',
						formatter: '.formatter.statusText'
					}"
                infoState="{= ${path: 'restaurant>OpeningTime', formatter: '.formatter.statusText'} === 'Closed' ? 'Error' : 'Success'}"
            />
        </items>
    </List>
</mvc:View>
